{
  "name": "ryd",
  "version": "1.0.2",
  "description": "Zero dependency package to prune node_modules for unnecessary files as a post-build step",
  "keywords": [
    "nodejs",
    "node_modules",
    "developer-tools"
  ],
  "author": "Michael Nissen <m9ssen@gmail.com>",
  "license": "MIT",
  "main": "./dist/job.js",
  "bin": {
    "ryd": "./bin/ryd.js"
  },
  "types": "./dist/job.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc"
  },
  "directories": {
    "app": "app",
    "bin": "bin"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "git@github.com:qruzz/ryd.git",
  "bugs": {
    "email": "m9ssen@gmail.com",
    "url": "https://github.com/qruzz/ryd/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/node": "^14.14.22",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,yml,yaml,md,mdx,graphql}": [
      "prettier --write"
    ]
  }
}
