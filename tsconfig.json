{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",

    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"]
  },
  "include": ["app/**/*"]
}
